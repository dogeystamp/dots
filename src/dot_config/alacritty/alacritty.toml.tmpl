{{if eq .chezmoi.os "windows" }}
shell = "nu"
{{end}}

[window]
padding = { x = 8, y = 8 }
dimensions = { columns = 120, lines = 70 }
{{if eq .chezmoi.os "linux" -}}
opacity = 0.0
{{- else -}}
opacity = 1.0
{{- end}}

[font]
normal = { family = "JetBrainsMono NF" }
size = 10
[colors]
[colors.primary]
background = "#000000"

[colors.normal]
black =   "#000000"
red =     "#afaaaa"
green =   "#505559"
yellow =  "#a7a7a7"
blue =    "#56698a"
magenta = "#d5d5d5"
cyan =    "#99AABB"
white =   "#e5e9f0"


[colors.bright]
black =   "#4c566a"
red =     "#bf616a"
green =   "#a3be8c"
yellow =  "#ebcb8b"
blue =    "#81a1c1"
magenta = "#b48ead"
cyan =    "#8fbcbb"
white =   "#eceff4"

[keyboard]
bindings = [
	{ key = "Enter", mods = "Control|Shift", action = "CreateNewWindow" },
	{ key = "l", mods = "Control|Shift", action = "ClearHistory" },
]

[bell]
animation = "EaseOutQuint"
duration = 150
color = "#000000"

