action          = "Copy"
hyperlinks      = true
post_processing = true
persist         = false
mouse.enabled   = true
binding         = { key = "R", mods = "Control|Shift" }
regex           = "(ipfs:|ipns:|magnet:|mailto:|gemini://|go‐pher://|https://|http://|news:|file:|git://|ssh:|ftp://)[^\u0000-\u001F\u007F-\u009F<>\"\\s{-}\\^⟨⟩‘]+"

